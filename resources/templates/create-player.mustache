    <main>
        
        <form action="/api/players/create" method="post" class="form w-50" name="player" id="form-create">
            <h3>Create a player</h3>
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Insert name" id="name" class="form-control" required>
            <label for="id_country">Country</label>
            <select name="id_country" class="form-control" id="id_country">
                {{#countries}}
                <option value="{{id}}">{{name}}</option>
                {{/countries}}
            </select>
            <label for="birthday">Birthday</label>
            <input type="date" name="birthday" class="form-control" id="birthday" required>
            <input type="submit" value="Create a player" class="btn btn-primary mt-4">
        </form>
    </main>
